<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RoomWordSample" parent="Theme.AppCompat.Light">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorPrimaryContainer">@color/colorCardLight</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Text color -->
        <item name="android:textColor">@color/black</item>
        <!-- Background color -->
        <item name="colorOnBackground">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Action bar text color -->
        <item name="titleTextColor">@color/white</item>

        <!-- EditText Style -->
        <item name="editTextStyle">@style/EditText.Main.Light</item>
        <!-- Button Style -->
        <item name="buttonStyle">@style/ButtonSubmit.Main</item>
        <!-- Floating Action Button Style -->
        <item name="floatingActionButtonStyle">@style/ButtonAdd.Main</item>
    </style>

    <style name="Theme.RoomWordSample" parent="Base.Theme.RoomWordSample" />
</resources>